<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverViewFragment"
    android:background="@color/myBackground"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin khách hàng"
        android:textSize="20dp"
        android:textColor="@color/myTextColor"
        android:padding="20dp"
        android:textStyle="bold"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <TableRow>
            <TextView android:text="Mã khách hàng"
                android:textColor="@color/myTextColor"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:text="ABC"
                android:textColor="@color/myTextColor"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Tên khách hàng"
                android:textColor="@color/myTextColor"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:text="ABC"
                android:textColor="@color/myTextColor"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin tài chính"
        android:textSize="20dp"
        android:textColor="@color/myTextColor"
        android:padding="20dp"
        android:textStyle="bold"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TableRow>
            <TextView android:text="Tổng tài sản"
                android:textColor="@color/myTextColor"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:text="ABC"
                android:textColor="@color/myTextColor"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Số dư đã đầu tư"
                android:textColor="@color/myTextColor"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:text="ABC"
                android:textColor="@color/myTextColor"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Lợi tức đã nhận được"
                android:textColor="@color/myTextColor"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:text="ABC"
                android:textColor="@color/myTextColor"
                android:textSize="16dp"
                android:layout_marginLeft="50dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>