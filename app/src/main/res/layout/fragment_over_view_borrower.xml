<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverViewFragment"
    android:background="@color/myBackgroundColor"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin khách hàng"
        android:textSize="22dp"
        android:textColor="@color/myBigTextColor"
        android:padding="20dp"
        android:textStyle="bold"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <TableRow
            android:background="@drawable/cell_border">
            <TextView android:text="Mã khách hàng"
                android:background="@drawable/cell_border"
                android:textColor="@color/myBigTextColor"
                android:padding="10dp"
                android:textSize="18dp"
                android:layout_width="170dp"/>

            <TextView
                android:id="@+id/txtInvestorID"
                android:textColor="@color/myTextColor"
                android:textSize="18dp"
                android:padding="10dp"/>
        </TableRow>
        <TableRow
            android:background="@drawable/cell_border">

            <TextView
                android:layout_width="170dp"
                android:background="@drawable/cell_border"
                android:padding="10dp"
                android:text="Tên khách hàng"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/txtName"
                android:textColor="@color/myTextColor"
                android:textSize="18dp"
                android:padding="10dp"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin tài chính"
        android:textSize="22dp"
        android:textColor="@color/myBigTextColor"
        android:padding="20dp"
        android:textStyle="bold"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TableRow
            android:background="@drawable/cell_border">

            <TextView
                android:background="@drawable/cell_border"
                android:padding="10dp"
                android:text="Tổng tài sản hiện có"
                android:layout_width="170dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp" />
            <TextView

                android:id="@+id/txtTotalAsset"
                android:textColor="@color/myTextColor"
                android:textSize="18dp"
                android:padding="10dp"/>
        </TableRow>
        <TableRow
            android:background="@drawable/cell_border">
            <TextView
                android:text="Tổng tiền nợ"
                android:textColor="@color/myBigTextColor"
                android:layout_width="170dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:background="@drawable/cell_border"/>

            <TextView

                android:id="@+id/txtTotalDept"
                android:textColor="@color/myTextColor"
                android:textSize="18dp"
                android:padding="10dp"/>
        </TableRow>
        <TableRow
            android:background="@drawable/cell_border">
            <TextView
                android:text="Tổng số tiền đã nhận được"
                android:textColor="@color/myBigTextColor"
                android:layout_width="170dp"
                android:padding="10dp"
                android:textSize="18dp"
                android:background="@drawable/cell_border"/>

            <TextView

                android:id="@+id/txtReceiveMoney"
                android:textColor="@color/myTextColor"
                android:textSize="18dp"
                android:padding="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>