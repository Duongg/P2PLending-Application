    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@drawable/cell_border">
