<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBackgroundColor"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin khách hàng"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/myTextColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:singleLine="true"
                    android:text="Mã khách hàng"
                    android:padding="10dp"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />

                <TextView
                    android:padding="10dp"
                    android:id="@+id/investorCode"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:padding="10dp"
                    android:text="Tên khách hàng"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />

                <EditText
                    android:padding="10dp"
                    android:id="@+id/investorName"
                    android:backgroundTint="@color/myTextColor"
                    android:textColor="@color/myTextColor"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:text="Số điện thoại"
                    android:padding="10dp"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />

                <EditText
                    android:padding="10dp"
                    android:id="@+id/investorPhone"
                    android:backgroundTint="@color/myTextColor"
                    android:textColor="@color/myTextColor"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:text="Email"
                    android:padding="10dp"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />

                <EditText
                    android:padding="10dp"
                    android:singleLine="true"
                    android:backgroundTint="@color/myTextColor"
                    android:id="@+id/investorEmail"
                    android:textColor="@color/myTextColor"
                    android:textSize="18dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:text="Mật khẩu"
                    android:padding="10dp"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />

                <EditText
                    android:padding="10dp"
                    android:singleLine="true"
                    android:id="@+id/edtPassword"
                    android:text="aaaaaa"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/myTextColor"
                    android:textColor="@color/myTextColor"
                    android:textSize="18dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:text="Nhập lại mật khẩu"
                    android:padding="10dp"
                    android:textColor="@color/myBigTextColor"
                    android:textSize="18dp" />

                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:text="aaaaaa"
                    android:inputType="textPassword"
                    android:layout_width="188dp"
                    android:backgroundTint="@color/myTextColor"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/myTextColor"
                    android:textSize="18dp" />
            </TableRow>

<!--            <TableRow-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="10dp">-->

                <!--                <TextView-->
                <!--                    android:text="Mật khẩu"-->
                <!--                    android:textColor="@color/myTextColor"-->
                <!--                    android:textSize="16dp" />-->

                <!--                <EditText-->
                <!--                    android:layout_marginLeft="20dp"-->
                <!--                    android:backgroundTint="@color/myTextColor"-->
                <!--                    android:inputType="textPassword"-->
                <!--                    android:singleLine="true"-->
                <!--                    android:text="1234"-->
                <!--                    android:textColor="@color/myTextColor"-->
                <!--                    android:textSize="16dp" />-->
<!--    </TableRow>-->

            <Button
                android:id="@+id/btnUpdate"
                android:layout_margin="30dp"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:textColor="@color/myTextColor"
                android:background="@color/myButtonColor"
                android:text="Cập nhật" />


        </TableLayout>

    </LinearLayout>
</LinearLayout>
