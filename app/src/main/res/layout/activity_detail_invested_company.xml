<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailInvestedCompanyActivity"
    android:orientation="vertical"
    android:background="@color/myBackgroundColor">
    <TextView
        android:gravity="center"
        android:textColor="@color/myTextColor"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết DN đã đầu tư" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Tên doanh nghiệp"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtName"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Tên dự án"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtInvestmentName"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Ngành nghề"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtCareer"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Kỳ hạn"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtPeriod"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Số tiền đầu tư"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtInvestedMoney"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Ngày đầu tư"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtStartDate"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Ngày kết thúc"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtEndDate"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Lợi nhuận dự kiến"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtLoan"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Lợi nhuận đã nhận được"
                android:textColor="@color/TextViewColor"
                android:textSize="16dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:id="@+id/txtLoanReceive"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
    </TableLayout>
</LinearLayout>