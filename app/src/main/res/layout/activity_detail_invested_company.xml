<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailInvestedCompanyActivity"
    android:orientation="vertical"
    android:background="@color/myBackgroundColor">
    <TextView
        android:gravity="center"
        android:textColor="@color/myTextColor"
        android:textStyle="bold"
        android:textSize="22dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết doanh nghiệp đã đầu tư" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@drawable/cell_border"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="Tên doanh nghiệp"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp"
                android:background="@drawable/cell_border"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txtName"
                android:textSize="16dp"
                android:padding="10dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Tên dự án"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtInvestmentName"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Ngành nghề"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtCareer"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:padding="10dp"
                android:text="Kỳ hạn"
                android:background="@drawable/cell_border"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtPeriod"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:padding="10dp"
                android:text="Lợi suất"
                android:background="@drawable/cell_border"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtProfit"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Số tiền đầu tư (VND)"
                android:textColor="@color/myBigTextColor"
                android:padding="10dp"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtInvestedMoney"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:padding="10dp"
                android:text="Ngày đầu tư"
                android:textColor="@color/myBigTextColor"
                android:background="@drawable/cell_border"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtStartDate"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:padding="10dp"
                android:text="Ngày kết thúc"
                android:background="@drawable/cell_border"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtEndDate"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">

            <TextView
                android:layout_width="176dp"
                android:background="@drawable/cell_border"
                android:padding="10dp"
                android:text="Lợi nhuận dự kiến (VND)"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp" />
            <TextView
               android:padding="10dp"
                android:id="@+id/txtLoan"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">

            <TextView
                android:layout_width="200dp"
                android:background="@drawable/cell_border"
                android:padding="10dp"
                android:text="Lợi nhuận đã nhận được (VND)"
                android:textColor="@color/myBigTextColor"
                android:textSize="16dp" />
            <TextView
                android:padding="10dp"
                android:id="@+id/txtLoanReceive"
                android:textSize="16dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
    </TableLayout>
</LinearLayout>