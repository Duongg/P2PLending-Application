<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailCalledInvestment"
    android:orientation="vertical"
    android:background="@color/myBackground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Chi tiết kêu gọi đầu tư"
        android:textColor="@color/myTextColor"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="50dp">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Tên dự án"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Kỳ hạn"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Ngành nghề"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Số tiền kêu gọi"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Lợi suất"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Số tiền đã nhận đầu tư"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Ngày bắt đầu đầu tư"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Ngày kết thúc đầu tư"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="10dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:text="Trạng thái"
                    android:textColor="@color/TextViewColor"
                    android:textSize="16dp"/>
                <TextView
                    android:layout_marginLeft="50dp"
                    android:text="ABC"
                    android:textSize="16dp"
                    android:textColor="@color/myTextColor"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>