<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailCompanyActivity"
    android:background="@color/myBackgroundColor"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:textColor="@color/myTextColor"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết đầu tư" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
               android:background="@drawable/cell_border"
                android:padding="10dp"
                android:text="Tên doanh nghiệp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtBorrowerName"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Tên dự án"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtInvestmentName"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Ngành nghề"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtCareer"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Kỳ hạn"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtPeriod"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Lợi suất"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtProfit"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Số tiền đầu tư"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtInvestMoney"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Ngày kêu gọi"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtStartDate"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:layout_width="190dp"
                android:padding="10dp"
                android:text="Số tiền còn lại có thể đầu tư"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtInvestorInvestMoney"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/cell_border">
            <TextView
                android:background="@drawable/cell_border"
                android:text="Số dư có thể đầu tư"
                android:padding="10dp"
                android:textColor="@color/myBigTextColor"
                android:textSize="18dp"/>
            <TextView
                android:padding="10dp"
                android:id="@+id/txtAvailableMoney"
                android:textSize="18dp"
                android:textColor="@color/myTextColor"/>
        </TableRow>
    </TableLayout>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/edtMoney"
        android:background="@color/myTextColor"
        android:hint="Nhập số tiền đầu tư"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@color/myButtonColor"
        android:textColor="@color/myTextColor"
        android:text="Đầu tư"
        android:onClick="clickToInvest"
        android:id="@+id/btnInvest"
        android:layout_gravity="center"/>

</LinearLayout>